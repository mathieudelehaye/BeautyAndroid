<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
>

    <Button
        android:id="@+id/close_help_dialog"
        app:icon="@drawable/close_circle"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="35dp"
        app:iconTint="@color/SignInGray"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:backgroundTint="@color/white"
        android:layout_marginTop="10dp"
        android:layout_height="62dp"
        android:layout_width="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
        android:id="@+id/description_help_dialog"
        android:text="This is an example of\nhelp dialog!"
        android:textSize="22dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/close_help_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
    />

    <View
        android:layout_height="20dp"
        android:layout_width="150dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_help_dialog"
    />

</LinearLayout>