<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:context="com.beautyorder.androidclient.controller.tabview.result.list.FragmentResultList"
>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/result_list_search"
        android:layout_width="match_parent"
        android:layout_height="52.5dp"
        android:layout_marginTop="112dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    >
        <include layout="@layout/fragment_search_box"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="330dp"
        android:layout_width="match_parent"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_list_search"
    >

        <View
            android:id="@+id/result_list_view_background"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/white"
        />

        <ListView
            android:id="@+id/result_list_view"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/score_layout_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    >

        <include layout="@layout/fragment_score"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>