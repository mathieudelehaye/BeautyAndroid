<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.beautyandroid.controller.FragmentMap">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/linearLayout"/>

    <org.osmdroid.views.MapView android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="450dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/view_mapDirectionTextBackground"
        android:layout_width="234dp"
        android:layout_height="140dp"
        android:background="@color/BgOrange"
        app:layout_constraintTop_toBottomOf="@id/map"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp"/>

    <TextView
        android:id="@+id/textArea_mapDirectionText"
        android:layout_width="230dp"
        android:layout_height="136dp"
        android:background="@color/BgOrange"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:lines="6"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintTop_toBottomOf="@id/map"
        android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp" android:paddingStart="5dp" android:paddingLeft="5dp"
        android:paddingTop="5dp" android:paddingEnd="5dp" android:paddingRight="5dp" android:paddingBottom="5dp"/>

    <View
        android:id="@+id/view_scoreBackground"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:background="@color/BgOrange"
        app:layout_constraintTop_toBottomOf="@id/map"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textArea_score"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/BgOrange"
        android:inputType="textMultiLine"
        android:overScrollMode="always"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/map"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>