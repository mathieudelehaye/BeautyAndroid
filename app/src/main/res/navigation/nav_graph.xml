<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FragmentApp">

    <fragment
        android:id="@+id/FragmentApp"
        android:name="com.beautyorder.androidclient.controller.main.FragmentApp"
        android:label="App Fragment"
        tools:layout="@layout/fragment_app">

        <action
            android:id="@+id/action_AppFragment_to_ResultDetailFragment"
            app:destination="@id/FragmentResultDetail"
        />

        <action
            android:id="@+id/action_AppFragment_to_HelpFragment"
            app:destination="@id/FragmentHelp"
        />

        <action
            android:id="@+id/action_AppFragment_to_TermsFragment"
            app:destination="@id/FragmentTerms"
        />
    </fragment>

    <fragment
        android:id="@+id/FragmentResultDetail"
        android:name="com.beautyorder.androidclient.controller.main.list.FragmentResultDetail"
        android:label="Result Detail Fragment"
        tools:layout="@layout/fragment_result_detail">

        <action
            android:id="@+id/action_ResultDetailFragment_to_AppFragment"
            app:destination="@id/FragmentApp"
        />
    </fragment>

    <fragment
        android:id="@+id/FragmentHelp"
        android:name="com.beautyorder.androidclient.controller.main.FragmentHelp"
        android:label="Help Fragment"
        tools:layout="@layout/fragment_help">

        <action
            android:id="@+id/action_HelpFragment_to_AppFragment"
            app:destination="@id/FragmentApp"
        />
    </fragment>

    <fragment
        android:id="@+id/FragmentTerms"
        android:name="com.beautyorder.androidclient.controller.main.FragmentTerms"
        android:label="Terms Fragment"
        tools:layout="@layout/fragment_terms">

        <action
            android:id="@+id/action_TermsFragment_to_AppFragment"
            app:destination="@id/FragmentApp"
        />
    </fragment>
</navigation>