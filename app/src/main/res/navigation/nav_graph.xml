<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/FragmentHome">

    <fragment
            android:id="@+id/FragmentHome"
            android:name="com.beautyorder.androidclient.FragmentHome"
            android:label="@string/home_fragment_label"
            tools:layout="@layout/fragment_home">

        <action
                android:id="@+id/action_HomeFragment_to_LoginFragment"
                app:destination="@id/FragmentLogin"/>
        <action
                android:id="@+id/action_HomeFragment_to_RegisterFragment"
                app:destination="@id/FragmentRegister"/>
    </fragment>
    <fragment
            android:id="@+id/FragmentLogin"
            android:name="com.beautyorder.androidclient.FragmentLogin"
            android:label="@string/login_fragment_label"
            tools:layout="@layout/fragment_login">

        <action
                android:id="@+id/action_LoginFragment_to_HomeFragment"
                app:destination="@id/FragmentHome"/>
        <action
                android:id="@+id/action_LoginFragment_to_MapFragment"
                app:destination="@id/FragmentMap"/>
    </fragment>
    <fragment
            android:id="@+id/FragmentRegister"
            android:name="com.beautyorder.androidclient.FragmentRegister"
            android:label="@string/register_fragment_label"
            tools:layout="@layout/fragment_register">

        <action
                android:id="@+id/action_HomeFragment_to_HomeFragment"
                app:destination="@id/FragmentHome"/>
        <action
                android:id="@+id/action_RegisterFragment_to_MapFragment"
                app:destination="@id/FragmentMap"/>
    </fragment>

    <fragment
            android:id="@+id/FragmentMap"
            android:name="com.beautyorder.androidclient.FragmentMap"
            android:label="@string/map_fragment_label"
            tools:layout="@layout/fragment_map">
    </fragment>
</navigation>